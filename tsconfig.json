{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"strict": true,
		"declaration": true,
		"stripInternal": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src"
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}